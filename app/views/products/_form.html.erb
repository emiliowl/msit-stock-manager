<%= simple_form_for(@product, html: {class: "form_vertical"}) do |f| %>
  <%= f.error_notification %>
  <fieldset>
    <legend>Produto</legend>
    <div class="form-inputs">
      <%= f.input :name %>
    </div>
  </fieldset>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
    <%= link_to "Cancel", products_path, type: :reset, class: 'btn btn-danger' %> 
  </div>
<% end %>
